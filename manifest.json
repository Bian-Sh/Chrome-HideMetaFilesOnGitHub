{
  "manifest_version": 3,
  "name": "Unity .Meta Filter",
  "version": "1.1.1",
  "description": "Hide Unity .meta files in GitHub repository views.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["storage", "contextMenus", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["https://github.com/*"]
    }
  ]
}
