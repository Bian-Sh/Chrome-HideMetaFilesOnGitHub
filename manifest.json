{
  "manifest_version": 3,
  "name": "Hide .meta Files on GitHub",
  "version": "1.0.0",
  "description": "Hide .meta files from GitHub repository file lists.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": [ "https://github.com/*" ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["https://github.com/*"]
    }
  ]
}
